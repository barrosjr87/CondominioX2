<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBBDF1"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-362dp"
        tools:layout_editor_absoluteY="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkpurple"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/textView1_Inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:drawableBottom="@drawable/baseline_real_estate_agent_24"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2_Inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Fazer Login"
            android:drawableTop="@drawable/baseline_login_24"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/darkpurple"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextEmail_Inicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_login"
            android:background="#F8F5F5"
            android:ems="10"
            android:hint=" E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextSenha_Inicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_eye"
            android:background="#F8F5F5"
            android:ems="10"
            android:hint=" Senha"
            android:inputType="text|textPassword" />

        <Button
            android:id="@+id/buttonEntrar_Inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="Entrar. CLique para acessar a tela inicial do Morador"
            android:text="Entrar"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <Button
                android:id="@+id/buttonAreaRestrita_Inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:contentDescription="Portaria. Clique para acessar a Ã¡rea restrita."
                android:onClick="portaria"
                android:text="Portaria"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/buttonNaoMeLembro_Inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:contentDescription="Redefinir. Clique para solicitar uma nova senha."
                android:onClick="redefinir"
                android:text="Redefinir"
                android:textColor="@color/white"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>