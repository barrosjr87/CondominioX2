<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoradorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBBDF1"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-362dp"
        tools:layout_editor_absoluteY="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkpurple"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AreaRestrita_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Morador"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sair_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Sair"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1_Morador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:drawableBottom="@drawable/baseline_real_estate_agent_24"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="Condomínio X"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOla_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="18dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewApartamento_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:textSize="18dp"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTela_Cep"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/baseline_lupa"
                android:gravity="center"
                android:onClick="telacep"
                android:text="Pesquisar CEP"
                android:textColor="@color/darkpurple"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/textViewReceber_Morador"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="Recebimento"
                android:text="Histórico de Entregas"
                android:textColor="@color/darkpurple"
                android:textSize="20dp" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView4_Historico"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="Data"
                android:textAlignment="center"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView5_Historico"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="Código"
                android:textAlignment="center"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView6_Historico"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:text="Descrição"
                android:textAlignment="center"
                app:layout_column="2"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView7_Historico"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text="Retirar"
                android:textAlignment="center"
                app:layout_column="3"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView8_Historico"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="10/03/24"
                android:textAlignment="center"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView9_Historico"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textAlignment="center"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView10_Historico"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="Pacote"
                android:textAlignment="center"
                app:layout_column="2"
                app:layout_row="1" />

            <ImageButton
                android:id="@+id/imageButton_Historico"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="@string/app_name"
                android:onClick="encomenda"
                app:layout_column="3"
                app:layout_row="1"
                app:srcCompat="@drawable/baseline_add_circle_24"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>


</LinearLayout>