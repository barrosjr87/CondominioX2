<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoradorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBBDF1"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-362dp"
        tools:layout_editor_absoluteY="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkpurple"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AreaRestrita_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Morador"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sair_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:onClick="sair_Morador"
                android:text="Sair"
                android:textColor="@color/white" />
        </LinearLayout>

            <TextView
                android:id="@+id/textView1_Morador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:drawableBottom="@drawable/baseline_real_estate_agent_24"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOla_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:drawableLeft="@drawable/ic_person"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewApartamento_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_home"
                    android:text=""
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="MInhas Encomendas"
                android:cropToPadding="false"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_notifica"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/contador_Encomendas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonEntrar_Inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="Entrar. CLique para acessar a tela inicial do Morador"
            android:onClick="encomenda"
            android:text="Minhas Encomendas"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_warning"
            android:text=" Mural de Avisos"
            android:textColor="@color/darkpurple"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewAviso_Morador"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/baseline_domain_24"
            android:text=" Contato Administração"
            android:textColor="@color/darkpurple"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/PhoneNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_call_24"
            android:text=" (11) 0000-0000"
            android:textColor="@color/darkpurple"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/PhoneNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_call_24"
            android:text=" (11) 9999-9999"
            android:textColor="@color/darkpurple"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>