<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecebimentoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBBDF1"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-362dp"
        tools:layout_editor_absoluteY="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkpurple"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gerenciarUsuarios_Recebimento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Nova Encomenda"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sair_Recebimento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:onClick="sair"
                android:text="Sair"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:drawableBottom="@drawable/baseline_real_estate_agent_24"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="05dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:drawableTop="@drawable/baseline_assignment_returned_24"
            android:gravity="center"
            android:text="Recebimento de Encomenda"
            android:textColor="@color/darkpurple"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextNome_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#FBFBFB"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_calendar"
            android:ems="10"
            android:hint=" Data"
            android:inputType="datetime|date" />

        <EditText
            android:id="@+id/editTextApto_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#F8F5F5"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_home"
            android:ems="10"
            android:hint=" Apartamento"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextCep_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#F8F5F5"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_location"
            android:ems="10"
            android:hint="CEP"
            android:inputType="number" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo:"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/radioButtonCarta_Recebimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carta" />

            <RadioButton
                android:id="@+id/radioButtonPacote_Recebimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pacote" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonCadastrar_Recebimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/darkpurple"
            android:text="Cadastrar"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>