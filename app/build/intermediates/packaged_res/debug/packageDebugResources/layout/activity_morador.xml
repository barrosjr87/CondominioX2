<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoradorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBBDF1"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-362dp"
        tools:layout_editor_absoluteY="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkpurple"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AreaRestrita_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Morador"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sair_Morador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurple"
                android:text="Sair"
                android:textColor="@color/white" />
        </LinearLayout>

            <TextView
                android:id="@+id/textView1_Morador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:drawableBottom="@drawable/baseline_real_estate_agent_24"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOla_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewApartamento_Morador"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewHistórico_Morador"
                android:layout_width="138dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/baseline_lupa"
                android:gravity="center"
                android:onClick="telacep"
                android:text="Consulta CEP"
                android:textColor="@color/darkpurple"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/textViewReceber_Morador"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="Recebimento"
                android:text="Mural de Avisos"
                android:textColor="@color/darkpurple"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:background="@color/white"
            android:id="@+id/textViewAviso_Morador"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text=""
            android:textSize="18dp" />


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <TextView
                android:id="@+id/data_Historico"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textAlignment="center"
                android:textColor="@color/darkpurple"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/codigo_Historico"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="CEP"
                android:textAlignment="center"
                android:textColor="@color/darkpurple"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/tipo_Historico"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textAlignment="center"
                android:textColor="@color/darkpurple"
                android:textStyle="bold"
                app:layout_column="2"
                app:layout_row="0" />

            <TextView
                android:id="@+id/retirar_Historico"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Retirar"
                android:textAlignment="center"
                android:textColor="@color/darkpurple"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_row="0" />

            <TextView
                android:id="@+id/dataView_Historico"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/codigoView_Historico"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/tipoView_Historico"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                app:layout_column="2"
                app:layout_row="1" />

            <ImageButton
                android:id="@+id/checkButton_Historico"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="@string/app_name"
                android:onClick="encomenda"
                app:layout_column="3"
                app:layout_row="1"
                app:srcCompat="@drawable/baseline_add_circle_24"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>


</LinearLayout>